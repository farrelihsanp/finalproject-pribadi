{
  "name": "api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npx prisma generate && npx tsc",
    "check-types": "npx tsc --noEmit",
    "dev": "NODE_ENV=development npx tsx --watch src/app.ts",
    "lint": "npx eslint",
    "start": "npm run build && NODE_ENV=production node dist/app.js",
    "refresh": "npx prisma migrate reset --skip-seed && npx prisma db push && npx prisma db seed"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-validator": "^2.20.33",
    "@types/geolib": "^2.0.3",
    "@types/handlebars": "^4.0.40",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.4",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "prisma": "^6.3.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  },
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "axios": "^1.8.4",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "geolib": "^3.3.4",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "midtrans-node-client": "^0.0.6",
    "multer": "^1.4.5-lts.1",
    "next-auth": "^4.24.11",
    "opencage-api-client": "^1.1.0",
    "resend": "^4.1.2",
    "slugify": "^1.6.6",
    "zod": "^3.24.2"
  }
}
